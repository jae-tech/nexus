# Electron 환경 변수 예제
# 이 파일을 복사하여 .env 파일을 생성하세요

# 개발 모드 설정
NODE_ENV=development

# 프론트엔드 개발 서버 URL
VITE_DEV_SERVER=http://localhost:5173

# 자동 업데이트 설정
# GitHub Release 기반 자동 업데이트
AUTO_UPDATE_ENABLED=true
GH_TOKEN=your_github_token_here

# 디버깅 설정
DEBUG_MODE=true
ELECTRON_ENABLE_LOGGING=true

# 데이터베이스 설정
# 개발 모드에서 커스텀 데이터베이스 경로 사용 (선택사항)
# DB_PATH=/custom/path/to/beauty.db

# 로그 레벨
# debug, info, warn, error
LOG_LEVEL=debug

# 테스트 데이터 자동 생성 (개발 모드만)
AUTO_INIT_TEST_DATA=true

# 백업 설정
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL=86400000  # 24시간 (밀리초)
MAX_BACKUP_COUNT=10

# 성능 모니터링
ENABLE_PERFORMANCE_MONITORING=false

# 코드 서명 (배포 시)
# macOS
CSC_LINK=path/to/certificate.p12
CSC_KEY_PASSWORD=your_certificate_password

# Windows
WIN_CSC_LINK=path/to/certificate.pfx
WIN_CSC_KEY_PASSWORD=your_certificate_password

# 배포 설정
PUBLISH_PROVIDER=github
PUBLISH_OWNER=nexus-design-system
PUBLISH_REPO=beauty-manager
